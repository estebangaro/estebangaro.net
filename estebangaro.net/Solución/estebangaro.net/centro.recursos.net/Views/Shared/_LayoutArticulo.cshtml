@model centro.recursos.net.Models.Utileria.ArticuloInfo
@using centro.recursos.net.Models.Helpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    @RenderSection("Metas", required: false)

    <title>@ViewBag.Title</title>
    <link href="~/Resources/css/popupG.css" rel="stylesheet" />
    <link href="~/Resources/css/menu.css" rel="stylesheet" />
    <link href="~/Resources/css/buscar.css" rel="stylesheet" />
    <link href="~/Resources/css/visualizadorcodigo.css" rel="stylesheet" />
    <link href="~/Resources/css/comentarios.css" rel="stylesheet" />
    <link href="~/Resources/css/articulo.css" rel="stylesheet" />
    <link href="~/Resources/css/home.css" rel="stylesheet" />
    <link href="~/Resources/css/autores.css" rel="stylesheet" />
    <link href="~/Resources/css/popupGv.css" rel="stylesheet" />
    <link href="~/Resources/css/popupGr.css" rel="stylesheet" />
    <link href="~/Resources/css/infoarticulo.css" rel="stylesheet" />
    <link href="~/Resources/css/artRelacionados.css" rel="stylesheet" />
    <link href="~/Resources/css/jqueryui/jquery-ui.css" rel="stylesheet" />
    <link href="~/Resources/css/acercade.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Resources/javascript/home.js"></script>
    <script src="~/Resources/javascript/popupG.js"></script>
    <script src="~/Resources/javascript/busqueda.js"></script>
    <script src="~/Resources/javascript/visualizadorcodigo.js"></script>
    <script src="~/Resources/javascript/comentarios.js"></script>
    <script src="~/Resources/javascript/articulo.js"></script>
    <script src="~/Resources/javascript/popupGv.js"></script>
    <script src="~/Resources/javascript/popupGr.js"></script>
    <script src="~/Resources/javascript/menu.js"></script>
    <script src="~/Resources/javascript/artRelacionados.js"></script>
    <script src="~/Resources/javascript/jquery-ui.js"></script>
    <script src="~/Resources/javascript/acercade.js"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    @Html.Action("_Menu", "Home")
    <div class="FondoSeccionContenidoFijo"></div>
    <div id="SeccionArticulo">
        <div class="FondoSeccionContenido">
            <div class="SeccionContenido">
                @Html.ObtenArticuloInformacion(Model.Articulo)
                @RenderBody()
            </div>
        </div>
        <div class="SeccionComentarios">
            @Html.Action("_Comentarios", "Articulo")
        </div>
    </div>
    <div id="dialogMsjArtRelG" class="styleVerifica">
        <img src="/Resources/imagenes/comentarios/salir.png" class="cerrar" />
        <div class="Flecha">
            <img src="~/Resources/imagenes/carrusel/flecha3D.png" />
        </div>
        <p class="Titulo">Art&iacute;culos Relacionados</p>
        <div class="Contenido">
            <table>
                <tbody>
                    @foreach (var articulo in Model.ArticulosRelacionados)
                    {
                        <tr><td><a href="@articulo.URI">@articulo.Titulo</a></td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @Html.Action("_PopUpG", "Articulo")
    @Html.Partial("_PopupGv")
    @Html.Partial("_PopupGr")
    @Html.Partial("_AcercaDe")
</body>
</html>
